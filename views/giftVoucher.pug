extends layout

block append head
	style.
		#buyVoucher {
			width: 100%;
			height: 100%;
			margin: 5px 50px;
			text-align : center ;
			padding: 20px;
		}
		#buyVoucher button:active{
			position: relative;
			top: 3px;
			border : 5px solid #293b4f;
		}
		#buyVoucher button:hover{
			cursor : pointer ;
			border : 5px solid #293b4f;
		}

block content
	.container
			.row
				.col-lg-12.text-center
					h3.formHeading(style='margin-right : -100px') 
						|'Go cashless' and express your love with gift vouchers 
					form#buyVoucher.text-center(action='http://localhost:1010/sendGift', method='post')
						div(style='text-align:center;')
							button#500(value='1', name='gift')
								img(src='/images/GiftCard_500.png' height = '360px' width = '500px')
							|
							|
							button#2000(value='2', name='gift')
								img(src='/images/GiftCard_2000.png' height = '360px' width = '500px')
						h3.formHeading
							|
							| Terms and conditions :
							|
						img(src='/images/GiftCard_terms.png' height = '40%' width = '60%')
						h3.formHeading
							|  
							| Express Wallet gift cards are accepted at : 
							|
						img(src='/images/Picture2.png' height = '30%' width = '50%')