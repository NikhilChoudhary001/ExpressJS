		.container
			.row
				.col-lg-12.text-center.tab-content
					h3.formHeading Register 
					form#signup(action='http://localhost:1010/save', method='post')
						p.form-group
							label(for='username')  Username  
							input.form-control(type='email', name='username', placeholder='Email : abc@xyz.com', required='')
						p.form-group
							label(for='pass')  Password  
							input.form-control(type='password', name='pass', placeholder='Password : Hover here see the validation', title='Password should have minimum length as 6 and also must contain atleast 1 UpperCase,1LowerCase , 1 Number and 1 Special Character.', pattern='(?=.*\\d)(?=.*\\W)(?=.*[a-z])(?=.*[A-Z]).{6,}', required='')
						p.form-group
							label(for='firstname')   First Name 
							input.form-control(type='text', name='firstname', placeholder='First Name', pattern='[A-Za-z]{3,}', required='')
						p.form-group
							label(for='lastname')  Last Name 
							input.form-control(type='text',name='lastname',placeholder='Last Name', pattern='[A-Za-z]{3,}',required='')
						p.form-group
							label(for='phoneNumber')  Contact Number 
							input.form-control(type='tel',name='phoneNumber',pattern='[0-9]{10}', placeholder='Mobile Number',required='')
						p.form-group
							label(for='DOB')  Date of Birth
							input.form-control(type='date',name='DOB', max='2010-05-31',required='')
						p.form-group
							label(for='address')   Address
							textarea.form-control(name='address', rows='4',cols='5',placeholder='Enter Your Address here',required='')
						button.btn.btn-primary.pull-left(type='submit') Register
								
