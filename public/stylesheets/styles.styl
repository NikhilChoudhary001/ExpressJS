

.logo 
    margin-top -20px
    text-align center
.error 
    margin 70px
    text-align center
    color MidnightBlue
    background-color white
    font-size 1.3em
#signup 
    width 40%
    height 50%
    margin-top -3px
    margin-bottom 100px
    margin-left auto
    margin-right auto
    padding 20px
    border 1px solid #ccc
    text-align center
    background-color white
    -webkit-box-shadow 1px 9px 10px -1px rgba(100,149,237,0.91)
    -moz-box-shadow 1px 9px 10px -1px rgba(100,149,237,0.91)
    box-shadow 1px 9px 10px -1px rgba(100,149,237,0.91)
    -webkit-border-radius 20px
    -moz-border-radius 20px
    border-radius 20px
    h1 
        position relative
        font italic 1.4em 'Montserrat'
        text-decoration underline
        color black
        text-align center
        margin 0 0 20px
    input 
        margin 5px 0
        padding 15px
        width 40%
        -webkit-border-radius 40px
        -moz-border-radius 40px
        border-radius 40px
        &:focus 
            border-color CornFlowerBlue
    button 
        margin 20px 0 0 0
        padding 15px 8px
        width 50%
        font 0.9em Montserrat
        background-color CornFlowerBlue
        -webkit-border-radius 40px
        -moz-border-radius 40px
        border-radius 40px
        &:active 
            position relative
            top 3px
        &:hover 
            background-color SteelBlue
            cursor pointer
textarea:focus, input:focus,button:focus 
    outline none
body 
    font italic 1.2em 'Montserrat'
    background url("/images/blue2.png") no-repeat fixed center
    background-size 100%
    margin 10px
    padding 20px
header 
    box-sizing border-box
    width 100%
    height 120px
ul 
    display inherit
    &.tab 
        list-style-type none
        overflow hidden
        li 
            float left
            vertical-align middle
            img 
                margin-top -30px
            a 
                display inline-block
                color black
                text-align center
                padding 14px 16px
                text-decoration none
                transition 0.3s
                border-radius 10px 0px 0px 0px
                margin-right 10px
                font-size 20px
                &:hover 
                    background-color SteelBlue
                    cursor pointer
ul.tab li a:focus, .active 
    background-color white
.tabcontent 
    display block
    padding 6px 12px
    border-top none
    width 100%
.footer-distributed 
    background-color CornFlowerBlue
    width 100%
    color black
    text-align left
    padding 20px -10px
    margin-top 80px
    .footer-left 
        width 25%
    h4 
        line-height 50px
        margin-top 0
        margin-bottom 20px
    .footer-links 
        margin 20px 0 12px
        padding 0
        a 
            display inline-block
            line-height 1.8
            text-decoration none
            color inherit
    .footer-company-name 
        font-size 20px
        font-weight normal
        margin-bottom 35px
    .footer-center 
        width 32%
        i 
            background-color white
            color SteelBlue
            font-size 30px
            width 38px
            height 38px
            border-radius 50%
            text-align center
            line-height 40px
            margin 10px 15px
            vertical-align middle
            margin-left 0
            &.fa-envelope 
                font-size 16px
                line-height 38px
        p 
            font-size 20px
            display inline-block
            vertical-align middle
            margin 0
    .footer-company-contact 
        span 
            display block
            font-size 22px
            font-weight bold
            margin-bottom 20px
            margin-top 10px
    .footer-right 
        width 40%
    .footer-company-about 
        line-height 30px
        font-size 20px
        font-weight normal
        margin 0
        span 
            display block
            font-size 22px
            font-weight bold
            margin-bottom 20px
    .footer-icons 
        margin-top 25px
        a 
            display inline-block
            width 35px
            height 35px
            cursor pointer
            color SteelBlue
            background-color white
            border-radius 2px
            font-size 22px
            text-align center
            line-height 35px
            margin-right 3px
            margin-bottom 5px
.footer-distributed .footer-left,
.footer-distributed .footer-center,
.footer-distributed .footer-right 
    display inline-block
    vertical-align top
@media (max-width: 600px)
    .footer-distributed
        font bold 18px Montserrat
        .footer-center
            i
                margin-left 0

@media (max-width:  600px)   
	.footer-distributed .footer-left, .footer-distributed .footer-center, .footer-distributed .footer-right
		display block
		width 100%
		margin-bottom 40px
		text-align center